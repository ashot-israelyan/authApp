<% include templates/header.ejs %>
<div class="container">
    <div class="row">
        <div class="login-heading text-center">
            <h2 class="section-heading">User Login</h2>
            <h3 class="section-subheading text-muted">Please enter your login information.</h3>
        </div>
        <section id="login" class="login">
            <div class="col-lg-12">
                <form name="loginForm" id="loginForm" action="/users/login" method="post">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="username">Username:</label>
                            <input class="form-control" type="text" name="username" id="username" placeholder="Username*">
                        </div>
                        <div class="form-group">
                            <label for="password">Password:</label>
                            <input class="form-control" type="password" name="password" id="password" placeholder="Password*">
                        </div>
                        <button type="submit" class="btn btn-success btn-xl">Login</button>
                    </div>
                </form>
                <div class="col-md-12">
                    <div class="reset form-group">
                        <a href="/users/facebook" class="btn btn-danger">Login with Facebook</a>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

<% include templates/footer.ejs %>